<div class="container py-4">
  <h2 class="text-center">Create a movie list</h2>

  <%= simple_form_for(@list) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create list", class:"btn btn-info rounded" %>
  <% end %>

</div>
