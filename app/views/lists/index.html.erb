    <h1>The Popcorn Factory</h1>
    <p>Your favorite movies all in one place </p>
  </div>
</div>


<div class="container mt-4">
  <div class="d-flex justify-content-between my-2">
    <h2>My lists</h2>
    <div>
      <%= link_to "Create a list", new_list_path, class:"btn btn-ghost" %>
    </div>
  </div>


    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key if list.photo.attached? %>)">
            <%= link_to list.name, list_path(list)%>
          </div>
        </div>
      <% end%>
    </div>
</div>
